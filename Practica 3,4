<script>
var c = document.getElementById("myCanvas");
var ctx = c.getContext("2d");
ctx.beginPath();
ctx.fillStyle= "#F33E2C";
ctx.fillRect(20,10,35,30);
ctx.closePath();
ctx.beginPath();
ctx.fillStyle= `rgba(44, 122, 243, .85)`;
ctx.fillRect(30,20,35,30);
ctx.closePath();
ctx.beginPath();
ctx.strokeStyle="red";
ctx.moveTo(185,40);
ctx.lineTo(245,80);
ctx.stroke();
ctx.closePath();
ctx.beginPath();
ctx.moveTo(125,38);
ctx.lineTo(155,18);
ctx.lineTo(185,40);
ctx.fill();
ctx.closePath();
ctx.beginPath();
ctx.fillStyle= "green";
ctx.arc(120, 100, 20, 0, 4 * Math.PI);
ctx.fill();
ctx.stroke();
ctx.closePath();
ctx.beginPath();
ctx.arc(170, 100, 20, 0, 4 * Math.PI);
ctx.stroke();
ctx.closePath();





</script>

